#include <stdio.h>

int main() {
    int mes;
    printf("Digite: ");
    scanf("%d",&mes);
    
    switch(mes)
    {
        case 1: case 2: case 3: 
            printf("A estação do ano corresponde ao mês %d é verão",mes);
            break;
        case 4: case 5: case 6: 
            printf("A estação do ano corresponde ao mês %d é outono",mes);
            break;
        case 7: case 8: case 9:
            printf("A estação do ano corresponde ao mês %d é inverno",mes);
            break;
        case 10: case 11: case 12:
            printf("A estação do ano corresponde ao mês %d é primavera",mes);
            break;
        default: printf("Dia da semana inválido");
    }
    return 0;
}
