#include <stdio.h>

int main() {
     int menu;
     float num1, num2, soma, subtracao, multiplicacao, divisao;
    
    printf("OPERACOES SOBRE INTEIROS");
    printf("\nDigite o primeiro valor: ");
    scanf("%f",&num1);
    printf("Digite o primeiro valor: ");
    scanf("%f",&num2);
    printf("\n1-Soma \n2-Subtração \n3-Multiplicação \n4-Divisão");
    printf("\nInforme o numero referente a opção: "); scanf("%d",&menu);
    switch (menu)
    {
        case 1:
            soma = (num1 + num2);
            printf("%f + %f = %f",num1, num2, soma);
            break;
        case 2:
            subtracao = (num1 - num2);
            printf("\n%f - %f = %f",num1, num2, subtracao);
            break;
        case 3:
            multiplicacao = (num1 * num2);
            printf("\n%f * %f = %f",num1, num2, multiplicacao);
            break;
        case 4:
            divisao = (num1 / num2);
            printf("\n%f / %f = %f",num1, num2, divisao);
            break;
        default:
            printf("Numero Invalido");
            break;
    }
}
