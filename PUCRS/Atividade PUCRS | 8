#include <stdio.h>

int main() {
    int num,media,soma = 0,contador = 0;
    printf("Digite: ");
    scanf("%d",&num);
    
    
    while(num != 0)
    {
        if(num % 2 == 0){
            soma = soma + num;
            contador++;
        }
        printf("\nDigite: ");
        scanf("%d",&num);
    }
    media = soma / contador;
    printf("A media Ã© %d",media);
    return 0;
}
