#include <stdio.h>

int main() {
    int numero, somaNegativos = 0;

    printf("Digite números inteiros (0 para encerrar):\n");

    do {
        scanf("%d", &numero);
        if (numero < 0) {
            somaNegativos += numero;
        }
        printf("Digite números inteiros (0 para encerrar):\n");

    } while (numero != 0);

    printf("Somatório dos números negativos: %d\n", somaNegativos);

    return 0;
}