#include <stdio.h>

int main() {
    int m, n;

    while (1) {
        printf("Digite um valor para m e n: ");
        scanf("%d %d", &m, &n);

        if (m <= 0 || n <= 0) {
            break;
        }

        int soma = 0;
        for (int i = 0; i < n; i++) {
            soma += m + i;
        }

        printf("Soma: %d\n", soma);
    }

    return 0;
}
